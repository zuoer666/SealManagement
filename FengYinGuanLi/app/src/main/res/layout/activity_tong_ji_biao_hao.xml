<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/top_main_tongji_biaohao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:text="批量领用："-->
                <!--android:textSize="20dp"-->
                <!--/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/ed_tongji_dianbiao_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ed_ap_shape"
                        android:gravity="top"
                        android:hint="电表号码"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="10dp" />
                    <!--<EditText-->
                    <!--android:hint="结束号码"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:id="@+id/et_pi_info_2"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/ed_ap_shape"-->
                    <!--android:maxLines="1"-->
                    <!--android:gravity = "top"-->
                    <!--android:inputType="number" />-->
                </LinearLayout>

                <Button
                    android:id="@+id/btn_tongji_dianbiao_submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/tijiao_btn"
                    android:text="安装与拆除查询"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/btn_tongji_dianbiao_xunjian_submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/tijiao_btn"
                    android:text="巡    检    查    询"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">


                <ListView
                    android:layout_margin="10dp"
                    android:id="@+id/ls_tongji_biaohaochaxun_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
                <ListView
                    android:layout_margin="10dp"
                    android:id="@+id/ls_tongji_biaohaochaxun_xunjian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/text_tip_biaohao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent"
                    android:text="@string/no_data"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
